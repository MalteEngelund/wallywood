enum Role {
  USER
  ADMIN
}

model Users {
  id        Int           @id @default(autoincrement())
  firstname String
  lastname  String
  email     String        @unique
  password  String
  role      Role
  isActive  Boolean
  createdAt DateTime      @default(now())

  // relations
  cartLines   CartLines[] @relation("UserCartLines")
  ratings     UserRatings[] @relation("UserRatings")

  @@map("users")
}

model Posters {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String
  description String
  image       String
  width       Int
  height      Int
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  // relations
  cartLines CartLines[] @relation("PosterCartLines")
  ratings   UserRatings[] @relation("PosterRatings")
  genres    genrePosterRel[]  @relation("PosterToGenrePosterRel")

  @@map("posters")
}

model CartLines {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  quantity  Int
  createdAt DateTime @default(now())

  // relations
  user   Users   @relation("UserCartLines", fields: [userId], references: [id])
  poster Posters @relation("PosterCartLines", fields: [posterId], references: [id])

  @@map("cartlines")
}

model UserRatings {
  id        Int      @id @default(autoincrement())
  userId    Int
  posterId  Int
  numStars  Int
  createdAt DateTime @default(now())

  // relations
  user   Users   @relation("UserRatings", fields: [userId], references: [id])
  poster Posters @relation("PosterRatings", fields: [posterId], references: [id])

  @@map("userratings")
}



model Genres {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  // relations
  posters genrePosterRel[] @relation("GenreToGenrePosterRel")

  @@map("genres")
}

model genrePosterRel {
  id       Int @id @default(autoincrement())
  genreId  Int
  posterId Int

  // relations
  genre  Genres  @relation("GenreToGenrePosterRel", fields: [genreId], references: [id])
  poster Posters @relation("PosterToGenrePosterRel", fields: [posterId], references: [id])

  @@map("genreposterrel")
}
